# Azure AD / Microsoft Graph (Application permissions)
AZURE_TENANT_ID=...
AZURE_CLIENT_ID=...
AZURE_CLIENT_SECRET=...

# Optional: constrain to a single mailbox (shared mailbox address)
M365_SHARED_MAILBOX=shared-inbox@yourdomain.com

# Webhook shared secret to match notifications
GRAPH_WEBHOOK_CLIENT_STATE=some-long-random-string

# Cloudflare R2
R2_ACCOUNT_ID=xxxxxxxxxxxxxxxxxxxx
R2_ACCESS_KEY_ID=...
R2_SECRET_ACCESS_KEY=...
R2_BUCKET=my-mail-attachments
R2_ENDPOINT=https://xxxxxxxxxxxxxxxxxxxx.r2.cloudflarestorage.com   # format: https://<ACCOUNT_ID>.r2.cloudflarestorage.com

# AWS SQS
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/123456789012/my-queue
AWS_REGION=us-east-1
